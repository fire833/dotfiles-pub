
# Exporting access keys for aws CLi to use/pick up:

export AWS_ACCESS_KEY_ID=AKIAIOSFODNN7EXAMPLE
export AWS_SECRET_ACCESS_KEY=wJalrXUtnFEMI/K7MDENG/bPxRfiCYEXAMPLEKEY

# updating kubeconfig to include EKS cluster:
aws eks update-kubeconfig --region region-code --name my-cluster

# Logging into AWS with CLI via SSO.
aws sso login --sso-session <session>

# Get an ECR token
aws ecr get-login-password --region <region> | buildah login --username AWS --password-stdin <account-id>.dkr.ecr.<region>.amazonaws.com

